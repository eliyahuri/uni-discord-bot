{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "checkJs": true,
        "types": ["node"],
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "pretty": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    }
}
